// A launch configuration that compiles the extension and then opens it inside a new window

{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/examples/test-server.js",
			"stopOnEntry": false,
			"args": [],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": "watch",
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development",
        "DEBUG": "*"
			},
			"externalConsole": true,
			"sourceMaps": false,
			"outDir": null
		}
	]
}
