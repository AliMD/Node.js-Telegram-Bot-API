{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"args": ["run"],
  "tasks": [
    {
      "taskName": "build",
	    "showOutput": "always",
	    "problemMatcher": "$tsc"
    },
    {
      "taskName": "watch",
	    "isWatching": true,
	    "showOutput": "silent",
	    "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "test",
	    "showOutput": "always"
    }
  ]
}
